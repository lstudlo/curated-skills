---
import ThemeToggle from './ThemeToggle.astro';
---

<header class="sticky top-0 z-20 bg-white/75 backdrop-blur-xl dark:border-zinc-800 dark:bg-black/70">
  <div class="mx-auto flex w-full max-w-7xl items-center justify-between gap-4 px-7 h-16 md:px-9">
    <a href="/" class="group min-w-0">
      <div class="flex items-center gap-2 sm:gap-3 group-hover:opacity-80">
        <div class="font-serif text-xl leading-none tracking-tight sm:text-2xl">
          Curated Skills
        </div>
        <span class="text-[10px] tracking-[0.14em] text-primary sm:text-[11px]">
          by
        </span>
        <img
          src="/lstudlo_logo.svg"
          alt="lstudlo"
          class="h-3.5 shrink-0 dark:invert"
        />
      </div>
    </a>

    <div class="flex items-center gap-2">
      <a
        href="/#skills"
        class="hidden rounded-full border border-zinc-300/80 px-3 py-1.5 text-xs tracking-[0.16em] uppercase hover:bg-zinc-100 dark:border-zinc-700 dark:hover:bg-zinc-900 sm:inline-flex"
      >
        Browse
      </a>
      <ThemeToggle />
    </div>
  </div>
</header>
