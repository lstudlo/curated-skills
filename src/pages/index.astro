---
import Layout from '../layouts/Layout.astro';
import {
  buildSkillDownloadHref,
  buildSkillHref,
  formatBytes,
  getSkills,
} from '../lib/skills';

export const prerender = true;

const skills = await getSkills();
const totalFiles = skills.reduce((sum, skill) => sum + skill.fileCount, 0);
const totalBytes = skills.reduce((sum, skill) => sum + skill.totalBytes, 0);
---

<Layout
  title="Curated Skills"
  description="Browse, inspect, and download public coding-agent skills and supporting scripts."
>
  <section>
    <div class="rounded-3xl border border-zinc-200/80 bg-white/75 p-6 shadow-[0_0_0_1px_rgba(0,0,0,0.02)] backdrop-blur sm:p-8 dark:border-zinc-800 dark:bg-zinc-950/70">
      <p class="text-[11px] tracking-[0.18em] text-zinc-500 uppercase">Skill Library</p>
      <h1 class="mt-3 max-w-3xl font-serif text-4xl leading-tight tracking-tight sm:text-5xl">
        A public, browsable index of coding-agent skills.
      </h1>
      <p class="mt-4 max-w-2xl text-sm leading-6 text-zinc-600 dark:text-zinc-300">
        Every skill in <code class="font-mono">src/skills</code> is listed here with metadata, file browsing, and direct downloads for docs, scripts, and references.
      </p>
      <div class="mt-8 flex flex-wrap gap-2">
        <a
          href="#skills"
          class="rounded-full border border-[var(--accent)] bg-[var(--accent)] px-4 py-2 text-xs tracking-[0.16em] text-white uppercase transition hover:opacity-90 dark:text-zinc-950"
        >
          Explore Skills
        </a>
        <a
          href="/skills/phased-implementation/"
          class="rounded-full border border-zinc-300/80 px-4 py-2 text-xs tracking-[0.16em] uppercase hover:bg-zinc-100 dark:border-zinc-700 dark:hover:bg-zinc-900"
        >
          Example Skill
        </a>
      </div>

      <div class="mt-8 grid gap-3 sm:grid-cols-3">
        <div class="rounded-2xl border border-zinc-200/80 bg-zinc-50/70 p-4 dark:border-zinc-800 dark:bg-zinc-900/50">
          <p class="text-[11px] tracking-[0.16em] text-zinc-500 uppercase">Skills</p>
          <p class="mt-2 font-mono text-2xl tracking-tight sm:text-3xl">{skills.length}</p>
        </div>
        <div class="rounded-2xl border border-zinc-200/80 bg-zinc-50/70 p-4 dark:border-zinc-800 dark:bg-zinc-900/50">
          <p class="text-[11px] tracking-[0.16em] text-zinc-500 uppercase">Files</p>
          <p class="mt-2 font-mono text-2xl tracking-tight sm:text-3xl">{totalFiles}</p>
        </div>
        <div class="rounded-2xl border border-zinc-200/80 bg-zinc-50/70 p-4 dark:border-zinc-800 dark:bg-zinc-900/50">
          <p class="text-[11px] tracking-[0.16em] text-zinc-500 uppercase">Repository Size</p>
          <p class="mt-2 font-mono text-2xl tracking-tight sm:text-3xl">{formatBytes(totalBytes)}</p>
        </div>
      </div>
    </div>
  </section>

  <section id="skills" class="mt-10">
    <div class="mb-4 flex items-end justify-between gap-4">
      <div>
        <p class="text-[11px] tracking-[0.16em] text-zinc-500 uppercase">All Skills</p>
        <h2 class="mt-1 font-serif text-2xl tracking-tight sm:text-3xl">Browse and inspect every skill package</h2>
      </div>
      <p class="hidden text-xs text-zinc-500 md:block">
        Click any card to inspect files and download scripts/docs.
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
      {skills.map((skill) => {
        const previewFiles = skill.files.slice(0, 3);
        const primaryDownload =
          `/download-skill/${encodeURIComponent(skill.slug)}`;

        return (
          <article class="group flex h-full flex-col rounded-2xl border border-zinc-200/80 bg-white/75 p-5 backdrop-blur transition hover:-translate-y-0.5 hover:border-zinc-900 dark:border-zinc-800 dark:bg-zinc-950/70 dark:hover:border-zinc-100">
            <div class="flex items-start justify-between gap-3">
              <div class="min-w-0">
                <p class="truncate text-[11px] tracking-[0.16em] text-zinc-500 uppercase">{skill.directoryName}</p>
                <h3 class="mt-1 line-clamp-2 font-serif text-2xl leading-tight tracking-tight">
                  <a href={buildSkillHref(skill.slug)} class="hover:underline">
                    {skill.title}
                  </a>
                </h3>
              </div>
              <span class="shrink-0 rounded-full border border-zinc-300/80 px-2 py-0.5 font-mono text-[11px] dark:border-zinc-700">
                {skill.fileCount}
              </span>
            </div>

            <p class="mt-3 line-clamp-3 text-sm leading-6 text-zinc-600 dark:text-zinc-300">
              {skill.description}
            </p>

            <dl class="mt-5 grid grid-cols-3 gap-2 text-xs">
              <div class="rounded-xl border border-zinc-200/80 p-2 dark:border-zinc-800">
                <dt class="text-zinc-500">Files</dt>
                <dd class="mt-1 font-mono text-zinc-900 dark:text-zinc-100">{skill.fileCount}</dd>
              </div>
              <div class="rounded-xl border border-zinc-200/80 p-2 dark:border-zinc-800">
                <dt class="text-zinc-500">Dirs</dt>
                <dd class="mt-1 font-mono text-zinc-900 dark:text-zinc-100">{skill.directoryCount}</dd>
              </div>
              <div class="rounded-xl border border-zinc-200/80 p-2 dark:border-zinc-800">
                <dt class="text-zinc-500">Size</dt>
                <dd class="mt-1 font-mono text-zinc-900 dark:text-zinc-100">{formatBytes(skill.totalBytes)}</dd>
              </div>
            </dl>

            <div class="mt-5 rounded-xl border border-zinc-200/80 bg-zinc-50/60 p-3 dark:border-zinc-800 dark:bg-zinc-900/50">
              <p class="text-[11px] tracking-[0.16em] text-zinc-500 uppercase">Sample Files</p>
              <ul class="mt-2 space-y-1 font-mono text-xs text-zinc-700 dark:text-zinc-300">
                {previewFiles.map((file) => (
                  <li class="truncate">{file.relativePath}</li>
                ))}
              </ul>
            </div>

            <div class="mt-5 flex items-center gap-2">
              <a
                href={buildSkillHref(skill.slug)}
                class="inline-flex rounded-full border border-[var(--accent)] bg-[var(--accent)] px-3 py-1.5 text-xs tracking-[0.14em] text-white uppercase hover:opacity-90 dark:text-zinc-950"
              >
                Open
              </a>
              {primaryDownload && (
                <a
                  href={primaryDownload}
                  download
                  class="inline-flex rounded-full border border-zinc-300/80 px-3 py-1.5 text-xs tracking-[0.14em] uppercase hover:bg-zinc-100 dark:border-zinc-700 dark:hover:bg-zinc-900"
                >
                  ZIP
                </a>
              )}
            </div>
          </article>
        );
      })}
    </div>
  </section>
</Layout>
